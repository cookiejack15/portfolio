---
interface Props {
  name?: string;
  title?: string;
  description?: string;
}

const {
  name = "Ismail",
  title = "Développeur & Expert Sécurité",
  description = "Je crée des solutions web sur mesure et j'accompagne les entreprises dans leurs projets digitaux. Du site vitrine au SaaS complexe, avec la sécurité comme priorité."
} = Astro.props;

const base = import.meta.env.BASE_URL;
---

<section class="hero" id="hero">
  <!-- Scorpion Constellation Canvas -->
  <canvas id="constellation-canvas" aria-hidden="true"></canvas>


  <div class="container hero-container">
    <div class="hero-content">
      <div class="hero-badge" data-gsap="badge">
        <span class="badge-dot"></span>
        <span class="badge-text font-mono">Disponible pour missions</span>
      </div>

      <h1 class="hero-title" data-gsap="title">
        <span class="title-name">ISMAIL CHIBA</span>
      </h1>

      <p class="hero-subtitle" data-gsap="subtitle">
        {title}
      </p>

      <p class="hero-description" data-gsap="description">
        Je crée des <em>solutions web sur mesure</em> et j'accompagne les entreprises dans leurs <em>projets digitaux</em>. Du site vitrine au <em>SaaS complexe</em>, avec la <em>sécurité</em> comme priorité.
      </p>

      <div class="hero-cta" data-gsap="cta">
        <a href={`${base}#projects`} class="btn btn-primary magnetic-btn">
          <span class="btn-text">Voir mes projets</span>
          <span class="btn-icon">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 5v14M19 12l-7 7-7-7"/>
            </svg>
          </span>
        </a>
        <a href={`${base}#contact`} class="btn magnetic-btn">
          <span class="btn-text">Me contacter</span>
        </a>
      </div>

      <!-- Quick Navigation Buttons -->
      <div class="hero-quick-nav" data-gsap="quick-nav">
        <a href={`${base}projects/dev`} class="quick-nav-btn">
          <span class="quick-nav-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="16 18 22 12 16 6"/><polyline points="8 6 2 12 8 18"/>
            </svg>
          </span>
          <span class="quick-nav-text">Dev</span>
        </a>
        <a href={`${base}projects/cybersecurity`} class="quick-nav-btn cyber-btn">
          <span class="quick-nav-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
              <path d="M7 9h1M7 12h2M7 15h1"/>
              <circle cx="16" cy="12" r="2"/>
              <path d="M16 10v-1M16 15v-1M14 12h-1M19 12h-1"/>
            </svg>
          </span>
          <span class="quick-nav-text">Cyber Security</span>
        </a>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="scroll-indicator" data-gsap="scroll">
      <div class="scroll-line"></div>
      <span class="scroll-text font-mono">Scroll</span>
    </div>
  </div>

  <!-- Large background text -->
  <div class="hero-bg-text" aria-hidden="true" data-gsap="bg-text">
    <span>CREATIVE</span>
    <span>DEVELOPER</span>
  </div>
</section>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  // Scorpion Constellation
  function initConstellation() {
    const canvas = document.getElementById('constellation-canvas') as HTMLCanvasElement;
    if (!canvas) return;

    const ctx = canvas.getContext('2d');
    if (!ctx) return;

    // Set canvas size
    function resize() {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
    }
    resize();
    window.addEventListener('resize', resize);

    // Scorpius constellation - vraie forme en J/crochet allongée
    const scorpiusStars = [
      // Fourche gauche (3 pointes flottantes)
      { x: 0.04, y: 0.20, size: 2.3, brightness: 0.85, isStinger: true },  // 0 - Pointe haute
      { x: 0.06, y: 0.28, size: 2.4, brightness: 0.88, isStinger: true },  // 1 - Pointe milieu
      { x: 0.04, y: 0.36, size: 2.3, brightness: 0.85, isStinger: true },  // 2 - Pointe basse
      { x: 0.10, y: 0.28, size: 2.5, brightness: 0.9 },   // 3 - Base fourche

      // Tête (vers Antares)
      { x: 0.16, y: 0.32, size: 2.6, brightness: 0.92 },  // 4 - Dschubba
      { x: 0.22, y: 0.36, size: 3.2, brightness: 1 },     // 5 - Antares (coeur, la plus brillante)

      // Corps qui descend (plus d'étoiles)
      { x: 0.27, y: 0.40, size: 2.5, brightness: 0.88 },  // 6
      { x: 0.32, y: 0.46, size: 2.3, brightness: 0.85 },  // 7
      { x: 0.36, y: 0.52, size: 2.4, brightness: 0.82 },  // 8
      { x: 0.40, y: 0.58, size: 2.2, brightness: 0.8 },   // 9
      { x: 0.44, y: 0.64, size: 2.3, brightness: 0.78 },  // 10
      { x: 0.49, y: 0.69, size: 2.1, brightness: 0.75 },  // 11

      // Queue qui remonte (courbe plus longue)
      { x: 0.55, y: 0.72, size: 2.2, brightness: 0.78 },  // 12
      { x: 0.62, y: 0.70, size: 2.3, brightness: 0.8 },   // 13
      { x: 0.68, y: 0.66, size: 2.4, brightness: 0.82 },  // 14
      { x: 0.74, y: 0.60, size: 2.5, brightness: 0.85 },  // 15
      { x: 0.79, y: 0.52, size: 2.4, brightness: 0.83 },  // 16
      { x: 0.83, y: 0.44, size: 2.3, brightness: 0.8 },   // 17

      // Dard - crochet qui se recourbe vers l'avant
      { x: 0.86, y: 0.36, size: 2.5, brightness: 0.88 },                    // 18
      { x: 0.88, y: 0.28, size: 2.6, brightness: 0.9 },                     // 19 - haut du crochet
      { x: 0.86, y: 0.22, size: 2.7, brightness: 0.92, isStinger: true },   // 20 - pointe qui revient
      { x: 0.82, y: 0.18, size: 2.9, brightness: 0.95, isStinger: true },   // 21 - Shaula (bout)
      { x: 0.78, y: 0.16, size: 2.6, brightness: 0.9, isStinger: true },    // 22 - Lesath (pointe finale)
    ];

    // Connections
    const connections = [
      // Fourche gauche (3 pointes vers la base)
      [0, 3], [1, 3], [2, 3],
      // Tête
      [3, 4], [4, 5],
      // Corps
      [5, 6], [6, 7], [7, 8], [8, 9], [9, 10], [10, 11],
      // Queue
      [11, 12], [12, 13], [13, 14], [14, 15], [15, 16], [16, 17],
      // Crochet (remonte puis revient vers l'avant)
      [17, 18], [18, 19], [19, 20], [20, 21], [21, 22],
    ];

    // Background stars (random small stars)
    const bgStars: { x: number; y: number; size: number; twinkle: number; speed: number }[] = [];
    for (let i = 0; i < 350; i++) {
      bgStars.push({
        x: Math.random(),
        y: Math.random(),
        size: Math.random() * 1.5 + 0.2,
        twinkle: Math.random() * Math.PI * 2,
        speed: Math.random() * 0.02 + 0.01
      });
    }

    let time = 0;

    function draw() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      time += 0.016;

      // Draw background stars with twinkle effect
      bgStars.forEach(star => {
        const twinkle = Math.sin(time * star.speed * 10 + star.twinkle) * 0.3 + 0.7;
        const alpha = twinkle * 0.4;

        ctx.beginPath();
        ctx.arc(
          star.x * canvas.width,
          star.y * canvas.height,
          star.size,
          0,
          Math.PI * 2
        );
        ctx.fillStyle = `rgba(255, 255, 255, ${alpha})`;
        ctx.fill();
      });

      // Helper function to get floating offset for stinger stars
      const getFloatOffset = (star: any, index: number) => {
        if (star.isStinger) {
          return {
            x: Math.sin(time * 0.3 + index * 0.5) * 6,
            y: Math.cos(time * 0.25 + index * 0.7) * 5
          };
        }
        return { x: 0, y: 0 };
      };

      // Draw constellation connections
      ctx.strokeStyle = 'rgba(147, 197, 253, 0.15)';
      ctx.lineWidth = 1;

      connections.forEach(([i, j]) => {
        const star1 = scorpiusStars[i];
        const star2 = scorpiusStars[j];
        const float1 = getFloatOffset(star1, i);
        const float2 = getFloatOffset(star2, j);

        ctx.beginPath();
        ctx.moveTo(
          star1.x * canvas.width + float1.x,
          star1.y * canvas.height + float1.y
        );
        ctx.lineTo(
          star2.x * canvas.width + float2.x,
          star2.y * canvas.height + float2.y
        );
        ctx.stroke();
      });

      // Draw constellation stars with gentle slow twinkle
      scorpiusStars.forEach((star, index) => {
        // Use same floating offset as connections
        const floatOffset = getFloatOffset(star, index);

        const x = star.x * canvas.width + floatOffset.x;
        const y = star.y * canvas.height + floatOffset.y;

        // Slow gentle twinkle effect - reduced speed
        const twinkle1 = Math.sin(time * 0.5 + index * 0.7) * 0.2;
        const twinkle2 = Math.sin(time * 0.8 + index * 1.3) * 0.15;
        const twinkleTotal = twinkle1 + twinkle2;
        const brightness = Math.max(0.4, Math.min(1, star.brightness * (0.75 + twinkleTotal)));

        // Dynamic glow size based on brightness
        const glowSize = star.size * (6 + twinkleTotal * 3);

        // Outer glow effect
        const gradient = ctx.createRadialGradient(x, y, 0, x, y, glowSize);
        gradient.addColorStop(0, `rgba(180, 210, 255, ${brightness * 0.9})`);
        gradient.addColorStop(0.2, `rgba(147, 197, 253, ${brightness * 0.5})`);
        gradient.addColorStop(0.5, `rgba(147, 197, 253, ${brightness * 0.2})`);
        gradient.addColorStop(1, 'rgba(147, 197, 253, 0)');

        ctx.beginPath();
        ctx.arc(x, y, glowSize, 0, Math.PI * 2);
        ctx.fillStyle = gradient;
        ctx.fill();

        // Star rays (cross pattern) for extra sparkle - only when bright
        if (brightness > 0.75) {
          const rayLength = star.size * 3 * brightness;
          ctx.strokeStyle = `rgba(255, 255, 255, ${(brightness - 0.75) * 1.5})`;
          ctx.lineWidth = 1;
          ctx.beginPath();
          ctx.moveTo(x - rayLength, y);
          ctx.lineTo(x + rayLength, y);
          ctx.moveTo(x, y - rayLength);
          ctx.lineTo(x, y + rayLength);
          ctx.stroke();
        }

        // Core star - bright white center
        const coreSize = star.size * (1 + twinkleTotal * 0.2);
        ctx.beginPath();
        ctx.arc(x, y, coreSize, 0, Math.PI * 2);
        ctx.fillStyle = `rgba(255, 255, 255, ${brightness})`;
        ctx.fill();
      });

      requestAnimationFrame(draw);
    }

    draw();
  }

  document.addEventListener('DOMContentLoaded', () => {
    // Initialize constellation
    initConstellation();

    // Initial animations timeline
    const tl = gsap.timeline({ defaults: { ease: 'power4.out' } });

    // Badge
    tl.fromTo('[data-gsap="badge"]',
      { opacity: 0, y: 30, scale: 0.9 },
      { opacity: 1, y: 0, scale: 1, duration: 1 }
    );

    // Title
    tl.fromTo('[data-gsap="title"]',
      { y: 80, opacity: 0, scale: 0.95 },
      { y: 0, opacity: 1, scale: 1, duration: 1.2, ease: 'power4.out' },
      '-=0.6'
    );

    // Subtitle
    tl.fromTo('[data-gsap="subtitle"]',
      { opacity: 0, y: 30 },
      { opacity: 1, y: 0, duration: 0.8 },
      '-=0.7'
    );

    // Description
    tl.fromTo('[data-gsap="description"]',
      { opacity: 0, y: 20 },
      { opacity: 1, y: 0, duration: 0.8 },
      '-=0.6'
    );

    // CTA buttons
    tl.fromTo('[data-gsap="cta"] .btn',
      { opacity: 0, y: 20 },
      { opacity: 1, y: 0, duration: 0.7, stagger: 0.1 },
      '-=0.5'
    );

    // Quick nav buttons
    tl.fromTo('[data-gsap="quick-nav"] .quick-nav-btn',
      { opacity: 0, y: 15, scale: 0.95 },
      { opacity: 1, y: 0, scale: 1, duration: 0.6, stagger: 0.1 },
      '-=0.3'
    );

    // Scroll indicator
    tl.fromTo('[data-gsap="scroll"]',
      { opacity: 0 },
      { opacity: 1, duration: 0.8 },
      '-=0.3'
    );

    // Background text
    tl.fromTo('[data-gsap="bg-text"] span',
      { x: -80, opacity: 0 },
      { x: 0, opacity: 0.03, duration: 1.2, stagger: 0.15 },
      '-=0.8'
    );

    // Parallax on scroll - simplified
    const isMobile = window.innerWidth <= 768;

    if (isMobile) {
      // On mobile, fade starts later and ends when hero is mostly scrolled
      gsap.to('.hero-content', {
        scrollTrigger: {
          trigger: '.hero',
          start: '30% top',  // Start fading when 30% of hero has scrolled
          end: '80% top',    // Finish fading when 80% has scrolled
          scrub: 1,
        },
        y: 50,
        opacity: 0,
      });
    } else {
      gsap.to('.hero-content', {
        scrollTrigger: {
          trigger: '.hero',
          start: 'top top',
          end: 'bottom top',
          scrub: 1,
        },
        y: 100,
        opacity: 0,
      });
    }

    gsap.to('[data-gsap="bg-text"]', {
      scrollTrigger: {
        trigger: '.hero',
        start: 'top top',
        end: 'bottom top',
        scrub: 1,
      },
      y: -80,
    });

    // Magnetic button effect
    const magneticBtns = document.querySelectorAll('.magnetic-btn');

    magneticBtns.forEach(btn => {
      btn.addEventListener('mousemove', (e) => {
        const rect = btn.getBoundingClientRect();
        const x = e.clientX - rect.left - rect.width / 2;
        const y = e.clientY - rect.top - rect.height / 2;

        gsap.to(btn, {
          x: x * 0.25,
          y: y * 0.25,
          duration: 0.3,
          ease: 'power2.out',
        });
      });

      btn.addEventListener('mouseleave', () => {
        gsap.to(btn, {
          x: 0,
          y: 0,
          duration: 0.5,
          ease: 'elastic.out(1, 0.4)',
        });
      });
    });
  });
</script>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    width: 100%;
    display: flex;
    align-items: center;
    overflow: hidden;
    padding: 120px 0 80px;
    background: linear-gradient(180deg, #0a0a0a 0%, #0d1117 50%, #0a0a0a 100%);
  }

  /* Constellation canvas */
  #constellation-canvas {
    position: absolute;
    inset: 0;
    z-index: 1;
    pointer-events: none;
  }


  .hero-container {
    position: relative;
    z-index: 10;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .hero-content {
    max-width: 900px;
    will-change: transform, opacity;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  /* Badge */
  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 10px 20px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 100px;
    margin-bottom: 40px;
    backdrop-filter: blur(10px);
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: #22c55e;
    border-radius: 50%;
    box-shadow: 0 0 15px #22c55e;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.6; transform: scale(1.2); }
  }

  .badge-text {
    font-size: 12px;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.15em;
  }

  /* Title */
  .hero-title {
    font-size: clamp(48px, 12vw, 100px);
    font-weight: 700;
    line-height: 1.05;
    letter-spacing: -0.04em;
    margin: 0 0 30px;
  }

  .title-line {
    display: block;
    overflow: hidden;
  }

  .title-word,
  .title-name {
    display: inline-block;
    will-change: transform, opacity;
  }

  .title-word {
    color: var(--text-secondary);
  }

  .title-name {
    background: linear-gradient(
      90deg,
      #fff 0%,
      #fff 60%,
      #888 80%,
      #333 95%,
      #0a0a0a 100%
    );
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  /* Subtitle */
  .hero-subtitle {
    font-size: clamp(24px, 5vw, 36px);
    font-weight: 500;
    color: var(--text-secondary);
    margin: 0 0 24px;
    letter-spacing: -0.02em;
  }

  /* Description */
  .hero-description {
    font-size: 18px;
    line-height: 1.8;
    color: var(--text-secondary);
    margin: 0 0 48px;
    max-width: 650px;
  }

  .hero-description em {
    font-style: italic;
    color: var(--text-primary);
    font-weight: 500;
  }

  @media (min-width: 768px) {
    .hero-description {
      font-size: 20px;
    }
  }

  /* CTA */
  .hero-cta {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
  }

  /* Quick Navigation */
  .hero-quick-nav {
    display: flex;
    gap: 20px;
    margin-top: 48px;
  }

  .quick-nav-btn {
    position: relative;
    display: flex;
    align-items: center;
    gap: 14px;
    padding: 14px 28px;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 16px;
    color: var(--text-secondary);
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    backdrop-filter: blur(12px);
    overflow: hidden;
  }

  /* Subtle gradient border on hover */
  .quick-nav-btn::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 16px;
    padding: 1px;
    background: linear-gradient(135deg, rgba(147, 197, 253, 0) 0%, rgba(147, 197, 253, 0.3) 50%, rgba(147, 197, 253, 0) 100%);
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  /* Animated glow effect */
  .quick-nav-btn::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 120%;
    height: 120%;
    background: radial-gradient(circle, rgba(147, 197, 253, 0.15) 0%, transparent 70%);
    transform: translate(-50%, -50%) scale(0);
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
  }

  .quick-nav-btn:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(147, 197, 253, 0.3);
    color: var(--text-primary);
    transform: translateY(-3px);
    box-shadow:
      0 10px 40px rgba(147, 197, 253, 0.15),
      0 0 0 1px rgba(147, 197, 253, 0.1) inset;
  }

  .quick-nav-btn:hover::before {
    opacity: 1;
  }

  .quick-nav-btn:hover::after {
    transform: translate(-50%, -50%) scale(1);
  }

  .quick-nav-icon {
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: rgba(147, 197, 253, 0.08);
    border: 1px solid rgba(147, 197, 253, 0.15);
    border-radius: 10px;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .quick-nav-btn:hover .quick-nav-icon {
    background: rgba(147, 197, 253, 0.15);
    border-color: rgba(147, 197, 253, 0.3);
    transform: scale(1.08) rotate(-3deg);
    box-shadow: 0 4px 15px rgba(147, 197, 253, 0.2);
  }

  .quick-nav-icon svg {
    color: var(--accent);
    transition: transform 0.3s ease;
  }

  .quick-nav-btn:hover .quick-nav-icon svg {
    transform: scale(1.1);
  }

  .quick-nav-text {
    position: relative;
    z-index: 1;
    letter-spacing: 0.03em;
    transition: all 0.3s ease;
  }

  .quick-nav-btn:hover .quick-nav-text {
    letter-spacing: 0.05em;
  }

  /* Cyber button specific styling */
  .cyber-btn::before {
    background: linear-gradient(135deg, rgba(239, 68, 68, 0) 0%, rgba(239, 68, 68, 0.3) 50%, rgba(239, 68, 68, 0) 100%);
  }

  .cyber-btn::after {
    background: radial-gradient(circle, rgba(239, 68, 68, 0.15) 0%, transparent 70%);
  }

  .cyber-btn .quick-nav-icon {
    background: rgba(239, 68, 68, 0.08);
    border-color: rgba(239, 68, 68, 0.15);
  }

  .cyber-btn .quick-nav-icon svg {
    color: #ef4444;
  }

  .cyber-btn:hover {
    border-color: rgba(239, 68, 68, 0.3);
    box-shadow:
      0 10px 40px rgba(239, 68, 68, 0.15),
      0 0 0 1px rgba(239, 68, 68, 0.1) inset;
  }

  .cyber-btn:hover .quick-nav-icon {
    background: rgba(239, 68, 68, 0.15);
    border-color: rgba(239, 68, 68, 0.3);
    box-shadow: 0 4px 15px rgba(239, 68, 68, 0.2);
  }

  /* Pulse animation on icon */
  @keyframes iconPulse {
    0%, 100% { box-shadow: 0 0 0 0 rgba(147, 197, 253, 0.4); }
    50% { box-shadow: 0 0 0 8px rgba(147, 197, 253, 0); }
  }

  @keyframes iconPulseRed {
    0%, 100% { box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.4); }
    50% { box-shadow: 0 0 0 8px rgba(239, 68, 68, 0); }
  }

  .quick-nav-btn:hover .quick-nav-icon {
    animation: iconPulse 2s ease-in-out infinite;
  }

  .cyber-btn:hover .quick-nav-icon {
    animation: iconPulseRed 2s ease-in-out infinite;
  }

  @media (max-width: 480px) {
    .hero-quick-nav {
      flex-direction: column;
      width: 100%;
