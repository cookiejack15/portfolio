<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('DOMContentLoaded', () => {
    const contentBlocks = document.querySelectorAll('.content-block');
    let currentImage = 'vitrine';

    function switchImage(newImage: string) {
      if (newImage === currentImage) return;

      const currentImg = document.querySelector(`.scroll-img[data-image="${currentImage}"]`);
      const newImg = document.querySelector(`.scroll-img[data-image="${newImage}"]`);

      if (currentImg && newImg) {
        gsap.to(currentImg, {
          opacity: 0,
          duration: 0.4,
          ease: 'power2.inOut',
          onComplete: () => {
            currentImg.classList.remove('active');
          }
        });

        newImg.classList.add('active');
        gsap.fromTo(newImg,
          { opacity: 0 },
          { opacity: 1, duration: 0.4, ease: 'power2.inOut' }
        );

        currentImage = newImage;
      }
    }

    contentBlocks.forEach((block) => {
      const trigger = block.getAttribute('data-trigger');

      ScrollTrigger.create({
        trigger: block,
        start: 'top center',
        end: 'bottom center',
        onEnter: () => {
          if (trigger) switchImage(trigger);
        },
        onEnterBack: () => {
          if (trigger) switchImage(trigger);
        },
      });
    });
  });
</script>

