              </div>

              <div class="card-content">
                <span class="card-number font-mono">0{index + 1}</span>
                <h2 class="card-title">{project.title}</h2>
                <p class="card-description">{project.description}</p>

                <div class="card-highlights">
                  {project.highlights.map((highlight) => (
                    <div class="highlight">
                      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="20 6 9 17 4 12"/>
                      </svg>
                      <span>{highlight}</span>
                    </div>
                  ))}
                </div>

                <div class="card-tags">
                  {project.tags.map((tag) => (
                    <span class="card-tag font-mono">{tag}</span>
                  ))}
                </div>

                <div class="card-cta">
                  <span>Voir le projet</span>
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M5 12h14M12 5l7 7-7 7"/>
                  </svg>
                </div>
              </div>
            </a>
          ))}
        </div>

        <!-- Progress indicators -->
        <div class="cards-progress">
          {projects.map((_, index) => (
            <div class="progress-dot" data-dot={index}></div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Tech Stack Section -->
  <section class="tech-section">
    <div class="container">
      <h2 class="section-title" data-animate="tech-title">Stack Technique</h2>

      <div class="tech-grid" data-animate="tech-grid">
        <div class="tech-category">
