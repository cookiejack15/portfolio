      <div class="cta-content" data-animate="cta">
        <h2>Un projet en tête ?</h2>
        <p>Discutons de votre vision et transformons-la en réalité.</p>
        <a href={`${base}#contact`} class="btn btn-primary">
          <span>Me contacter</span>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </section>
</ProjectLayout>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('DOMContentLoaded', () => {
    const isMobile = window.innerWidth <= 768;

    // Hero animations
    const tl = gsap.timeline({ defaults: { ease: 'power4.out' } });

    tl.fromTo('[data-animate="badge"]',
      { opacity: 0, y: 30 },
      { opacity: 1, y: 0, duration: 0.8 }
    );

    tl.fromTo('[data-animate="title"]',
      { opacity: 0, y: 50 },
      { opacity: 1, y: 0, duration: 1 },
      '-=0.5'
    );

    tl.fromTo('[data-animate="desc"]',
      { opacity: 0, y: 30 },
      { opacity: 1, y: 0, duration: 0.8 },
      '-=0.6'
    );

    tl.fromTo('[data-animate="stats"] .stat',
      { opacity: 0, y: 20 },
      { opacity: 1, y: 0, duration: 0.6, stagger: 0.1 },
      '-=0.4'
    );

    // Stacked Cards Animation
    const cards = document.querySelectorAll('.project-card');
    const dots = document.querySelectorAll('.progress-dot');
    const wrapper = document.querySelector('.cards-stack-wrapper');
    const totalCards = cards.length;

    if (isMobile) {
      // Mobile: simple scroll without pinning
      cards.forEach((card, i) => {
        gsap.set(card, {
          position: 'relative',
          scale: 1,
          y: 0,
          zIndex: 1,
          opacity: 1
        });
      });

      // Hide progress dots on mobile
      const progressDots = document.querySelector('.cards-progress');
      if (progressDots) progressDots.style.display = 'none';

      // Simple fade in animation for each card
      cards.forEach((card, i) => {
        gsap.fromTo(card,
          { opacity: 0, y: 60 },
          {
            opacity: 1,
            y: 0,
            duration: 0.8,
            scrollTrigger: {
              trigger: card,
              start: 'top 85%',
            }
          }
        );
      });
    } else {
      // Desktop: one card visible at a time with slide animation
      const hero = document.querySelector('.dev-hero');

      // Hero fade out when approaching cards
      if (hero) {
        ScrollTrigger.create({
          trigger: '.projects-section',
          start: 'top 80%',
          end: 'top 20%',
          scrub: true,
          onUpdate: (self) => {
            const progress = self.progress;
            gsap.set(hero, {
              opacity: 1 - progress,
              y: -progress * 50
            });
          }
        });
      }

      // Set initial state - only first card visible
      cards.forEach((card, i) => {
        gsap.set(card, {
          y: i === 0 ? 0 : 100,
          zIndex: totalCards - i,
          opacity: i === 0 ? 1 : 0,
          scale: 1,
          pointerEvents: i === 0 ? 'auto' : 'none'
        });
      });

      // Set first dot active
      if (dots[0]) dots[0].classList.add('active');

      // Create scroll-triggered animation
      ScrollTrigger.create({
        trigger: wrapper,
        start: 'top 15%',
        end: `+=${totalCards * 100}%`,
        pin: true,
        scrub: 0.3,
        onUpdate: (self) => {
          const progress = self.progress;
          const cardIndex = Math.min(Math.floor(progress * totalCards), totalCards - 1);

          cards.forEach((card, i) => {
            const cardProgress = progress * totalCards - i;

            if (cardProgress >= 0 && cardProgress <= 1) {
              // Current card - sliding out
              gsap.to(card, {
                y: -cardProgress * 120,
                opacity: 1 - cardProgress,
                scale: 1,
                pointerEvents: cardProgress < 0.5 ? 'auto' : 'none',
                duration: 0.1
              });
            } else if (cardProgress < 0 && cardProgress > -1) {
              // Next card - sliding in
              const enterProgress = 1 + cardProgress;
              gsap.to(card, {
                y: (1 - enterProgress) * 100,
                opacity: enterProgress,
                scale: 1,
                pointerEvents: enterProgress > 0.5 ? 'auto' : 'none',
                duration: 0.1
              });
            } else if (cardProgress <= -1) {
              // Future cards - hidden below
              gsap.to(card, {
                y: 100,
                opacity: 0,
                scale: 1,
                pointerEvents: 'none',
                duration: 0.1
              });
            } else {
              // Past cards - hidden above
              gsap.to(card, {
                y: -120,
                opacity: 0,
                scale: 1,
                pointerEvents: 'none',
                duration: 0.1
              });
            }
          });

          // Update dots
          dots.forEach((dot, i) => {
            dot.classList.toggle('active', i === cardIndex);
          });
        }
      });
    }

    // Tech section
    gsap.fromTo('[data-animate="tech-title"]',
      { opacity: 0, y: 30 },
      {
        opacity: 1,
        y: 0,
        duration: 0.8,
        scrollTrigger: {
          trigger: '.tech-section',
          start: 'top 80%',
        }
      }
    );

    gsap.fromTo('.tech-category',
      { opacity: 0, y: 40 },
      {
        opacity: 1,
        y: 0,
        duration: 0.6,
        stagger: 0.1,
        scrollTrigger: {
          trigger: '.tech-grid',
          start: 'top 80%',
        }
      }
    );

    // CTA
    gsap.fromTo('[data-animate="cta"]',
      { opacity: 0, y: 40 },
      {
        opacity: 1,
        y: 0,
        duration: 0.8,
        scrollTrigger: {
          trigger: '.cta-section',
          start: 'top 80%',
        }
      }
    );
  });
</script>

