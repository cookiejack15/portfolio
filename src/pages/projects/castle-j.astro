---
import ProjectLayout from '../../layouts/ProjectLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const base = import.meta.env.BASE_URL;

const moduleShowcases = [
  {
    id: "crm",
    title: "CRM Intelligent",
    image: `${base}projects/Castle-J/CRM.png`,
    description: "Un CRM complet conçu pour maximiser vos conversions et centraliser toutes vos interactions clients.",
    features: [
      "Pipeline Kanban drag & drop avec statuts personnalisables",
      "Lead scoring automatique basé sur l'engagement",
      "Historique complet des interactions (emails, appels, notes)",
      "Segmentation avancée et filtres dynamiques",
      "Intégration calendrier pour les rendez-vous",
      "Export CSV/Excel des données"
    ]
  },
  {
    id: "facturation",
    title: "Facturation & Devis",
    image: `${base}projects/Castle-J/Facture.png`,
    secondImage: `${base}projects/Castle-J/Devis.png`,
    description: "Générez des documents professionnels en quelques clics avec numérotation automatique et suivi des paiements.",
    features: [
      "Génération PDF professionnelle avec votre branding",
      "QR code de paiement intégré sur chaque facture",
      "Numérotation intelligente (FAC-2024-0001)",
      "Conversion devis → facture en un clic",
      "Relances automatiques programmables",
      "Suivi des statuts : Brouillon, Envoyé, Payé, En retard"
    ]
  },
  {
    id: "fournisseurs",
    title: "Gestion Fournisseurs",
    image: `${base}projects/Castle-J/Fournisseurs.png`,
    description: "Centralisez vos relations fournisseurs et optimisez vos approvisionnements.",
    features: [
      "Fiches fournisseurs complètes avec coordonnées",
      "Historique des commandes et livraisons",
      "Évaluation et notation des fournisseurs",
      "Alertes de réapprovisionnement automatiques",
      "Comparaison des prix entre fournisseurs",
      "Gestion des conditions de paiement"
    ]
  },
  {
    id: "comptabilite",
    title: "Comptabilité",
    image: `${base}projects/Castle-J/Comptabilite.png`,
    description: "Une comptabilité simplifiée mais puissante, conforme au plan comptable français.",
    features: [
      "Plan comptable général français intégré",
      "Rapprochement bancaire intelligent à 3 niveaux",
      "Grand livre et balance automatiques",
      "Gestion des budgets par catégorie",
      "Export comptable pour votre expert-comptable",
      "Détection d'anomalies par l'IA"
    ]
  },
  {
    id: "rh",
    title: "Ressources Humaines",
    image: `${base}projects/Castle-J/RH.png`,
    description: "Gérez vos équipes efficacement : congés, temps, paie et évaluations.",
    features: [
      "Fiches employés complètes et sécurisées",
      "Calendrier des congés avec validation workflow",
      "Feuilles de temps et pointage",
      "Génération automatique des fiches de paie PDF",
      "Évaluations annuelles et objectifs",
      "Organigramme dynamique de l'entreprise"
    ]
  }
];

const aiModes = [
  {
    mode: "Manuel",
    icon: `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M18 11V6a2 2 0 0 0-2-2a2 2 0 0 0-2 2"/><path d="M14 10V4a2 2 0 0 0-2-2a2 2 0 0 0-2 2v2"/><path d="M10 10.5V6a2 2 0 0 0-2-2a2 2 0 0 0-2 2v8"/><path d="M18 8a2 2 0 1 1 4 0v6a8 8 0 0 1-8 8h-2c-2.8 0-4.5-.86-5.99-2.34l-3.6-3.6a2 2 0 0 1 2.83-2.82L7 15"/></svg>`,
    description: "L'humain décide, l'IA vérifie et alerte en cas d'anomalie"
  },
  {
    mode: "Superviseur",
    icon: `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="m9 12 2 2 4-4"/></svg>`,
    description: "L'IA suggère des actions, l'humain valide, apprentissage continu"
  },
  {
    mode: "Autonome",
    icon: `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 5a3 3 0 1 0-5.997.125 4 4 0 0 0-2.526 5.77 4 4 0 0 0 .556 6.588A4 4 0 1 0 12 18Z"/><path d="M12 5a3 3 0 1 1 5.997.125 4 4 0 0 1 2.526 5.77 4 4 0 0 1-.556 6.588A4 4 0 1 1 12 18Z"/><path d="M15 13a4.5 4.5 0 0 1-3-4 4.5 4.5 0 0 1-3 4"/></svg>`,
    description: "L'IA agit puis informe, override humain toujours possible"
  },
];

const aiCapabilities = [
  { title: "Classification documents", desc: "OCR + catégorisation automatique" },
  { title: "Rapprochement bancaire", desc: "Matching intelligent à 3 niveaux" },
  { title: "Relances clients", desc: "Messages personnalisés par contexte" },
  { title: "Prédictions stock", desc: "Anticipation des ruptures" },
  { title: "Génération rapports", desc: "Synthèses quotidiennes automatiques" },
  { title: "Détection anomalies", desc: "Alertes proactives sur les écarts" },
];

const techStackBackend = [
  { name: "Node.js", logo: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/nodejs/nodejs-original.svg" },
  { name: "TypeScript", logo: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/typescript/typescript-original.svg" },
  { name: "PostgreSQL", logo: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/postgresql/postgresql-original.svg" },
  { name: "Redis", logo: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/redis/redis-original.svg" },
  { name: "OpenAI", logo: "https://cdn.worldvectorlogo.com/logos/openai-2.svg" },
  { name: "Docker", logo: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/docker/docker-original.svg" },
];

const techStackFrontend = [
  { name: "React", logo: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/react/react-original.svg" },
  { name: "TypeScript", logo: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/typescript/typescript-original.svg" },
  { name: "TailwindCSS", logo: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/tailwindcss/tailwindcss-original.svg" },
  { name: "Vite", logo: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/vitejs/vitejs-original.svg" },
];

const stats = [
  { value: "70+", label: "Fichiers Backend" },
  { value: "30+", label: "Composants React" },
  { value: "15+", label: "Modules Métier" },
  { value: "100+", label: "Endpoints API" },
];

const securityLayers = [
  "JWT + Refresh Tokens + bcrypt",
  "RBAC + Row-Level Security PostgreSQL",
  "Validation Zod + Protection XSS/SQLi",
  "Rate Limiting configurable",
  "Security Headers (Helmet.js)",
  "Audit Trail complet",
];
---

<ProjectLayout title="Castle-J - ERP Intelligent avec Agent IA" description="Plateforme ERP nouvelle génération avec agent IA autonome pour PME">
  <Header />

  <main class="project-page">
    <!-- Hero -->
    <section class="project-hero">
      <div class="container">
        <a href={`${base}#projects`} class="back-link">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          <span>Retour aux projets</span>
        </a>

        <div class="project-hero-content">
          <span class="project-tag font-mono">ERP + IA</span>
          <h1 class="project-title">Castle-J</h1>
          <p class="project-subtitle">ERP intelligent nouvelle génération avec agent IA autonome</p>
          <p class="project-tagline">
            <em>"Castle-J transforme la gestion d'entreprise en forteresse numérique intelligente"</em>
          </p>
        </div>
      </div>
    </section>

    <!-- Full Width Dashboard Image -->
    <section class="showcase-section">
      <div class="showcase-image">
        <img src={`${base}projects/Castle-J/Dashboard.png`} alt="Castle-J Dashboard" />
      </div>
    </section>

    <!-- Description -->
    <section class="description-section">
      <div class="container">
        <div class="description-content">
          <h2>Une plateforme complète pour les PME</h2>
          <p>
            Castle-J est une plateforme <em>ERP nouvelle génération</em> conçue pour les PME,
            combinant une suite complète d'outils de gestion avec un <em>agent IA autonome</em>
            capable d'automatiser les processus métier, analyser les données en temps réel
            et prendre des décisions intelligentes.
          </p>
          <p>
            L'architecture <em>multi-tenant SaaS-ready</em> permet à chaque organisation de
            bénéficier d'une isolation complète des données avec Row-Level Security PostgreSQL,
            tout en activant uniquement les modules dont elle a besoin.
          </p>
        </div>
      </div>
    </section>

    <!-- Stats -->
    <section class="stats-section">
      <div class="container">
        <div class="stats-grid">
          {stats.map((stat) => (
            <div class="stat-card">
              <span class="stat-value">{stat.value}</span>
              <span class="stat-label">{stat.label}</span>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Agent IA Section with Image -->
    <section class="ai-section">
      <div class="container">
        <div class="ai-header">
          <h2 class="section-title">Agent IA Autonome</h2>
          <p class="section-subtitle">Le cœur intelligent de Castle-J - propulsé par GPT-4o-mini</p>
        </div>

        <div class="ai-showcase">
          <div class="ai-image">
            <img src={`${base}projects/Castle-J/ia.png`} alt="Castle-J Agent IA" />
          </div>
          <div class="ai-content">
            <div class="ai-modes">
              {aiModes.map((item) => (
                <div class="ai-mode-card">
                  <div class="mode-header">
                    <span class="mode-icon" set:html={item.icon}></span>
                    <h3>{item.mode}</h3>
                  </div>
                  <p>{item.description}</p>
                </div>
              ))}
            </div>
          </div>
        </div>

        <div class="ai-capabilities-grid">
          {aiCapabilities.map((cap) => (
            <div class="capability-card">
              <h4>{cap.title}</h4>
              <p>{cap.desc}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Modules Overview Image -->
    <section class="modules-overview">
      <div class="container">
        <h2 class="section-title">Système Modulaire</h2>
        <p class="section-subtitle">Activez uniquement les modules dont vous avez besoin</p>
        <div class="modules-image">
          <img src={`${base}projects/Castle-J/Modules.png`} alt="Castle-J Modules" />
        </div>
      </div>
    </section>

    <!-- Detailed Module Showcases -->
    {moduleShowcases.map((module, index) => (
      <section class={`module-showcase ${index % 2 === 1 ? 'reversed' : ''}`} id={module.id}>
        <div class="container">
          <div class="module-showcase-grid">
            <div class="module-image-wrapper">
              <img src={module.image} alt={module.title} class="module-main-image" />
              {module.secondImage && (
                <img src={module.secondImage} alt={`${module.title} - Devis`} class="module-second-image" />
              )}
            </div>
            <div class="module-details">
              <span class="module-number font-mono">0{index + 1}</span>
              <h2>{module.title}</h2>
              <p class="module-description">{module.description}</p>
              <ul class="module-features">
                {module.features.map((feature) => (
                  <li>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="m9 12 2 2 4-4"/>
                      <circle cx="12" cy="12" r="10"/>
                    </svg>
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      </section>
    ))}

    <!-- Architecture -->
    <section class="architecture-section">
      <div class="container">
        <h2 class="section-title">Architecture Multi-Tenant</h2>
        <p class="section-subtitle">SaaS-ready avec isolation complète des données</p>

        <div class="architecture-content">
          <div class="architecture-feature">
            <div class="arch-header">
              <span class="arch-icon"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect width="16" height="20" x="4" y="2" rx="2" ry="2"/><path d="M9 22v-4h6v4"/><path d="M8 6h.01"/><path d="M16 6h.01"/><path d="M12 6h.01"/><path d="M12 10h.01"/><path d="M12 14h.01"/><path d="M16 10h.01"/><path d="M16 14h.01"/><path d="M8 10h.01"/><path d="M8 14h.01"/></svg></span>
              <h3>Multi-Organisation</h3>
            </div>
            <p>Chaque entreprise possède son propre espace isolé avec ses utilisateurs, données et configurations.</p>
          </div>
          <div class="architecture-feature">
            <div class="arch-header">
              <span class="arch-icon"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg></span>
              <h3>Gestion d'Équipe & RBAC</h3>
            </div>
            <p>6 rôles prédéfinis (Owner, Admin, Manager, User, Viewer, Custom) avec permissions granulaires.</p>
          </div>
          <div class="architecture-feature">
            <div class="arch-header">
              <span class="arch-icon"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M15.6 2.7a1 1 0 0 1 .7-.3h4a1 1 0 0 1 1 1v4a1 1 0 0 1-.3.7L18 12l3 3a1 1 0 0 1 .3.7v4a1 1 0 0 1-1 1h-4a1 1 0 0 1-.7-.3L12 18l-3.6 3.7a1 1 0 0 1-.7.3H3.6a1 1 0 0 1-1-1v-4a1 1 0 0 1 .3-.7L6 12 2.9 8.4a1 1 0 0 1-.3-.7v-4a1 1 0 0 1 1-1h4a1 1 0 0 1 .7.3L12 6Z"/></svg></span>
              <h3>Système Modulaire</h3>
            </div>
            <p>Activation/désactivation en temps réel, dépendances automatiques et estimation des coûts.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Security -->
    <section class="security-section">
      <div class="container">
        <h2 class="section-title">Sécurité Multicouche</h2>
        <div class="security-layers">
          {securityLayers.map((layer, index) => (
            <div class="security-layer">
              <span class="layer-number">0{index + 1}</span>
              <span class="layer-text">{layer}</span>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Stack Technique -->
    <section class="tech-section">
      <div class="container">
        <h2 class="section-title">Stack Technique</h2>

        <div class="tech-category">
          <h3>Backend</h3>
          <div class="tech-bubbles">
            {techStackBackend.map((tech, index) => (
              <div class="tech-bubble" style={`--delay: ${index * 0.3}s; --float-duration: ${3 + (index % 3)}s;`}>
                <img src={tech.logo} alt={tech.name} />
                <span>{tech.name}</span>
              </div>
            ))}
          </div>
        </div>

        <div class="tech-category">
          <h3>Frontend</h3>
          <div class="tech-bubbles">
            {techStackFrontend.map((tech, index) => (
              <div class="tech-bubble" style={`--delay: ${index * 0.3}s; --float-duration: ${3 + (index % 3)}s;`}>
                <img src={tech.logo} alt={tech.name} />
                <span>{tech.name}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Why Castle-J -->
    <section class="why-section">
      <div class="container">
        <div class="why-content">
          <h2>Pourquoi "Castle-J" ?</h2>
          <p>
            <strong>Castle</strong> = Forteresse → Sécurité, solidité, protection des données
          </p>
          <p>
            <strong>J</strong> = Intelligence (comme AI) → L'agent IA au cœur du système
          </p>
          <p class="why-tagline">
            <em>Castle-J protège et automatise votre entreprise comme une forteresse intelligente.</em>
          </p>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</ProjectLayout>

<style>
  .project-page {
    min-height: 100vh;
    padding-top: 120px;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  /* Back link */
  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--text-secondary);
    font-size: 14px;
    margin-bottom: 40px;
    transition: color 0.3s ease;
  }

  .back-link:hover {
    color: var(--text-primary);
  }

  /* Hero */
  .project-hero {
    padding-bottom: 60px;
  }

  .project-hero-content {
    max-width: 800px;
  }

  .project-tag {
    display: inline-block;
    font-size: 12px;
    color: var(--accent);
    text-transform: uppercase;
    letter-spacing: 0.25em;
    margin-bottom: 20px;
    padding: 8px 16px;
    border: 1px solid rgba(59, 130, 246, 0.3);
    border-radius: 100px;
    background: rgba(59, 130, 246, 0.05);
  }

  .project-title {
    font-size: clamp(48px, 8vw, 80px);
    font-weight: 700;
    letter-spacing: -0.04em;
    margin: 0 0 24px;
    line-height: 1.1;
  }

  .project-subtitle {
    font-size: 20px;
    line-height: 1.6;
    color: var(--text-secondary);
    margin: 0 0 16px;
  }

  .project-tagline {
    font-size: 18px;
    color: var(--text-muted);
    margin: 0;
  }

  .project-tagline em {
    color: var(--accent);
  }

  /* Showcase */
  .showcase-section {
    padding: 0 0 80px;
  }

  .showcase-image {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .showcase-image img {
    width: 100%;
    height: auto;
    border-radius: 24px;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.3),
      0 20px 40px -10px rgba(0, 0, 0, 0.5),
      0 0 0 1px rgba(255, 255, 255, 0.05);
  }

  /* Section Title */
  .section-title {
    font-size: 32px;
    font-weight: 700;
    text-align: center;
    margin: 0 0 16px;
    letter-spacing: -0.02em;
  }

  .section-subtitle {
    font-size: 18px;
    color: var(--text-secondary);
    text-align: center;
    margin: 0 0 48px;
  }

  /* Description */
  .description-section {
    padding: 80px 0;
  }

  .description-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .description-content h2 {
    font-size: 32px;
    font-weight: 700;
    margin: 0 0 32px;
    letter-spacing: -0.02em;
  }

  .description-content p {
    font-size: 18px;
    line-height: 1.9;
    color: var(--text-secondary);
    margin: 0 0 24px;
  }

  .description-content em {
    color: var(--text-primary);
    font-style: italic;
    font-weight: 500;
  }

  /* Stats */
  .stats-section {
    padding: 60px 0;
    background: var(--bg-secondary);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
  }

  .stat-card {
    text-align: center;
    padding: 32px 20px;
    background: var(--bg-primary);
    border: 1px solid var(--border);
    border-radius: 16px;
  }

  .stat-value {
    display: block;
    font-size: 36px;
    font-weight: 700;
    color: var(--accent);
    margin-bottom: 8px;
  }

  .stat-label {
    font-size: 14px;
    color: var(--text-secondary);
  }

  /* AI Section */
  .ai-section {
    padding: 100px 0;
    background: var(--bg-secondary);
  }

  .ai-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .ai-showcase {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 48px;
    align-items: center;
    margin-bottom: 60px;
  }

  .ai-image img {
    width: 100%;
    height: auto;
    border-radius: 20px;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.3),
      0 20px 40px -10px rgba(0, 0, 0, 0.5),
      0 0 0 1px rgba(255, 255, 255, 0.05);
  }

  .ai-modes {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-mode-card {
    padding: 24px;
    background: var(--bg-primary);
    border: 1px solid var(--border);
    border-radius: 16px;
    transition: transform 0.3s ease, border-color 0.3s ease;
  }

  .ai-mode-card:hover {
    transform: translateX(8px);
    border-color: var(--accent);
  }

  .mode-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 8px;
  }

  .mode-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    color: var(--accent);
    background: rgba(59, 130, 246, 0.1);
    border-radius: 10px;
  }

  .ai-mode-card h3 {
    font-size: 18px;
    font-weight: 600;
    margin: 0;
    color: var(--text-primary);
  }

  .ai-mode-card p {
    font-size: 14px;
    line-height: 1.6;
    color: var(--text-secondary);
    margin: 0;
    padding-left: 52px;
  }

  .ai-capabilities-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 16px;
  }

  .capability-card {
    padding: 24px;
    background: var(--bg-primary);
    border: 1px solid var(--border);
    border-radius: 12px;
    text-align: center;
    transition: transform 0.3s ease, border-color 0.3s ease;
  }

  .capability-card:hover {
    transform: translateY(-4px);
    border-color: var(--accent);
  }

  .capability-card h4 {
