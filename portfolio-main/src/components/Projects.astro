---
const base = import.meta.env.BASE_URL;

const categories = [
  {
    title: "Développement & Applications Web",
    description: "Du site vitrine au SaaS complexe, je conçois des solutions web performantes et sur mesure. Applications métier, ERP intelligents, agents IA autonomes.",
    icon: `<svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <polyline points="16 18 22 12 16 6"/><polyline points="8 6 2 12 8 18"/>
    </svg>`,
    tags: ["React", "Node.js", "IA / LLM", "PostgreSQL", "Astro"],
    link: `${base}projects/dev`,
    projects: ["ECHO Prospection", "Castle-J", "Gabriel.le"],
    gradient: "linear-gradient(135deg, rgba(59, 130, 246, 0.15) 0%, rgba(147, 197, 253, 0.05) 100%)"
  },
  {
    title: "Cyber Security",
    description: "Tests d'intrusion, hardening applicatif, conception de SOC et recherche de vulnérabilités. Une approche offensive pour une défense solide.",
    icon: `<svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
    </svg>`,
    tags: ["Pentest", "Bug Bounty", "SOC", "Hardening"],
    link: `${base}projects/cybersecurity`,
    projects: ["Bug Bounty", "SOC Design", "Web App Security"],
    gradient: "linear-gradient(135deg, rgba(239, 68, 68, 0.15) 0%, rgba(251, 146, 60, 0.05) 100%)"
  }
];
---

<section class="projects" id="projects">
  <!-- Section large text -->
  <div class="section-bg-text" aria-hidden="true">
    <span data-scroll-text>EXPERTISE</span>
  </div>

  <div class="container">
    <header class="section-header" data-animate="header">
      <span class="section-tag font-mono" data-animate="tag">Domaines</span>
      <h2 class="section-title" data-animate="title">
        <span class="title-reveal">Expertises</span>
      </h2>
      <p class="section-description" data-animate="desc">
        Deux domaines complémentaires pour des solutions complètes et sécurisées.
      </p>
    </header>

    <!-- Category Cards Grid -->
    <div class="categories-grid">
      {categories.map((category, index) => (
        <a href={category.link} class="category-card" data-animate="card" data-index={index}>
          <div class="card-glow" style={`background: ${category.gradient}`}></div>

          <div class="card-header">
            <div class="card-icon" set:html={category.icon} />
            <span class="card-number font-mono">0{index + 1}</span>
          </div>

          <h3 class="card-title">{category.title}</h3>
          <p class="card-description">{category.description}</p>

          <div class="card-projects">
            <span class="projects-label font-mono">Projets</span>
            <ul class="projects-list">
              {category.projects.map((project) => (
                <li>{project}</li>
              ))}
            </ul>
          </div>

          <div class="card-tags">
            {category.tags.map((tag) => (
              <span class="card-tag font-mono">{tag}</span>
            ))}
          </div>

          <div class="card-cta">
            <span>Explorer</span>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('DOMContentLoaded', () => {
    const projectsSection = document.querySelector('.projects');

    // Header animations
    gsap.fromTo('[data-animate="tag"]',
      { opacity: 0, y: 20 },
      {
        opacity: 1,
        y: 0,
        duration: 0.8,
        scrollTrigger: {
          trigger: projectsSection,
          start: 'top 80%',
        }
      }
    );

    gsap.fromTo('.projects .title-reveal',
      { y: 80, opacity: 0, rotateX: -30 },
      {
        y: 0,
        opacity: 1,
        rotateX: 0,
        duration: 1,
        ease: 'power4.out',
        scrollTrigger: {
          trigger: projectsSection,
          start: 'top 75%',
        }
      }
    );

    gsap.fromTo('[data-animate="desc"]',
      { opacity: 0, y: 30 },
      {
        opacity: 1,
        y: 0,
        duration: 0.8,
        scrollTrigger: {
          trigger: projectsSection,
          start: 'top 70%',
        }
      }
    );

    // Category cards animation
    gsap.fromTo('[data-animate="card"]',
      { opacity: 0, y: 60, scale: 0.95 },
      {
        opacity: 1,
        y: 0,
        scale: 1,
        duration: 0.8,
        stagger: 0.15,
        ease: 'power3.out',
        scrollTrigger: {
          trigger: '.categories-grid',
          start: 'top 80%',
        }
      }
    );

    // Background text parallax
    gsap.to('[data-scroll-text]', {
      scrollTrigger: {
        trigger: projectsSection,
        start: 'top bottom',
        end: 'bottom top',
        scrub: 1,
      },
      x: 200,
      ease: 'none',
    });

    // Magnetic effect on cards
    document.querySelectorAll('.category-card').forEach(card => {
      card.addEventListener('mousemove', (e) => {
        const rect = card.getBoundingClientRect();
        const x = e.clientX - rect.left - rect.width / 2;
        const y = e.clientY - rect.top - rect.height / 2;

        gsap.to(card, {
          rotateY: x * 0.02,
          rotateX: -y * 0.02,
          duration: 0.5,
          ease: 'power2.out',
        });

        // Move glow with cursor
        const glow = card.querySelector('.card-glow');
        if (glow) {
          gsap.to(glow, {
            x: x * 0.1,
            y: y * 0.1,
            duration: 0.5,
          });
        }
      });

      card.addEventListener('mouseleave', () => {
        gsap.to(card, {
          rotateY: 0,
          rotateX: 0,
          duration: 0.7,
          ease: 'elastic.out(1, 0.5)',
        });

        const glow = card.querySelector('.card-glow');
        if (glow) {
          gsap.to(glow, {
            x: 0,
            y: 0,
            duration: 0.5,
          });
        }
      });
    });
  });
</script>

<style>
  .projects {
    padding: 150px 0;
    position: relative;
    overflow: hidden;
    width: 100%;
  }

  /* Background text */
  .section-bg-text {
    position: absolute;
    top: 150px;
    left: -10%;
    pointer-events: none;
    z-index: 0;
    overflow: hidden;
    width: 120%;
  }

  .section-bg-text span {
    font-size: clamp(100px, 25vw, 350px);
    font-weight: 900;
    letter-spacing: -0.05em;
    color: transparent;
    -webkit-text-stroke: 1px rgba(255, 255, 255, 0.03);
    white-space: nowrap;
    display: block;
  }

  .container {
    position: relative;
    z-index: 1;
  }

  .section-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 80px;
  }

  .section-tag {
    display: inline-block;
    font-size: 12px;
    color: var(--accent);
    text-transform: uppercase;
    letter-spacing: 0.25em;
    margin-bottom: 20px;
    padding: 8px 16px;
    border: 1px solid rgba(59, 130, 246, 0.3);
    border-radius: 100px;
    background: rgba(59, 130, 246, 0.05);
  }

  .section-title {
    font-size: clamp(48px, 10vw, 80px);
    font-weight: 700;
    letter-spacing: -0.04em;
    margin: 0 0 24px;
    line-height: 1.1;
    overflow: hidden;
  }

  .title-reveal {
    display: inline-block;
    will-change: transform, opacity;
  }

  .section-description {
    font-size: 18px;
    line-height: 1.8;
    color: var(--text-secondary);
    margin: 0;
  }

  /* Categories Grid */
  .categories-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 40px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 40px;
  }

  /* Category Card */
  .category-card {
    position: relative;
    padding: 48px;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 24px;
    text-decoration: none;
    color: inherit;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    transform-style: preserve-3d;
    perspective: 1000px;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .category-card:hover {
    border-color: rgba(255, 255, 255, 0.15);
    transform: translateY(-8px);
    box-shadow: 0 30px 60px rgba(0, 0, 0, 0.3);
  }

  .card-glow {
    position: absolute;
    inset: -50%;
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
    filter: blur(80px);
  }

  .category-card:hover .card-glow {
    opacity: 1;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .card-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 72px;
    height: 72px;
    background: rgba(147, 197, 253, 0.1);
    border: 1px solid rgba(147, 197, 253, 0.2);
    border-radius: 20px;
    color: var(--accent);
    transition: all 0.3s ease;
  }

  .category-card:hover .card-icon {
    background: rgba(147, 197, 253, 0.15);
    transform: scale(1.05);
  }

  .category-card[data-index="1"] .card-icon {
    background: rgba(239, 68, 68, 0.1);
    border-color: rgba(239, 68, 68, 0.2);
    color: #ef4444;
  }

  .category-card[data-index="1"]:hover .card-icon {
    background: rgba(239, 68, 68, 0.15);
  }

  .card-number {
    font-size: 14px;
    color: var(--text-muted);
    letter-spacing: 0.2em;
  }

  .card-title {
    font-size: clamp(28px, 3vw, 36px);
    font-weight: 700;
    letter-spacing: -0.02em;
    margin: 0;
    line-height: 1.2;
  }

  .card-description {
    font-size: 16px;
    line-height: 1.7;
    color: var(--text-secondary);
    margin: 0;
  }

  .card-projects {
    padding: 20px;
    background: rgba(255, 255, 255, 0.02);
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  .projects-label {
    font-size: 11px;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    display: block;
    margin-bottom: 12px;
  }

  .projects-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .projects-list li {
    font-size: 14px;
    color: var(--text-secondary);
    padding-left: 16px;
    position: relative;
  }

  .projects-list li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 6px;
    height: 6px;
    background: var(--accent);
    border-radius: 50%;
    opacity: 0.5;
  }

  .category-card[data-index="1"] .projects-list li::before {
    background: #ef4444;
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }

  .card-tag {
    padding: 8px 14px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 100px;
    font-size: 11px;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: all 0.3s ease;
  }

  .category-card:hover .card-tag {
    border-color: rgba(255, 255, 255, 0.15);
  }

  .card-cta {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-top: auto;
    padding-top: 24px;
    font-size: 15px;
    font-weight: 500;
    color: var(--text-secondary);
    transition: all 0.3s ease;
  }

  .card-cta svg {
    transition: transform 0.3s ease;
  }

  .category-card:hover .card-cta {
    color: var(--accent);
  }

  .category-card[data-index="1"]:hover .card-cta {
    color: #ef4444;
  }

  .category-card:hover .card-cta svg {
    transform: translateX(6px);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .categories-grid {
      gap: 30px;
      padding: 0 30px;
    }

    .category-card {
      padding: 36px;
    }
  }

  @media (max-width: 768px) {
    .projects {
      padding: 100px 0;
    }

    .categories-grid {
      grid-template-columns: 1fr;
      gap: 24px;
      padding: 0 20px;
    }

    .category-card {
      padding: 32px;
    }

    .card-icon {
      width: 60px;
      height: 60px;
      border-radius: 16px;
    }

    .section-header {
      margin-bottom: 60px;
    }
  }
</style>
